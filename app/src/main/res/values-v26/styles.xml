<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="forms">
        <item name="android:layout_height">44sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginHorizontal">16sp</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:background">@drawable/forms_border</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44sp</item>
        <item name="android:layout_marginHorizontal">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">4dp</item>
    </style>
</resources>